    <link rel='stylesheet' href='/stylesheets/style.css' />

    <title>
        <%= title%>
    </title>
</head>

<body>

</body>

<%- include('partials/header') -%>

    <div class="container-fluid">
        <div class="row">
            <%- include('partials/nav') -%>
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div class="m-4 d-flex justify-content-center">
                        <h1>Articulo</h1>
                    </div>

                    <div class="alert alert-success" role="alert" disable id="alert-msg">
                        This is a success alertâ€”check it out!
                    </div>

                    <div class="container d-flex flex-column align-items-center fs-5">
                        <div class="input-group m-3 container d-flex align-items-center">
                            <label class="me-3 p-1">ID Articulo</label>
                            <input class="form-control" id="id-atr" value="<%= articulos.id %>" disabled>
                        </div>
                        <div class="input-group m-3 container d-flex align-items-center">
                            <label class="me-5 p-2">Titulo</label>
                            <input class="form-control " name="title" id="titulo-atr" value="<%= articulos.title %>">
                        </div>
                        <div class=" input-groupm-3 container d-flex">
                            <label class="me-2">Descripcion</label>
                            <textarea class="form-control" style="height: 400px;" id="texto-atr" name="text">
                                <%= articulos.text %>
                            </textarea>
                        </div>
                        <div class="d-grid gap-5 d-md-flex justify-content-center container mt-3">
                            <button id="modificar-btn" class="btn btn-primary btn-lg form-control">
                                Modificar
                            </button>
                            <button id="eliminar-btn" class="btn btn-danger btn-lg form-control">
                                Eliminar
                            </button>
                        </div>
                    </div>
                </main>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
        </script>

    <script src="/javascripts/delete.js"></script>
    <script src="/javascripts/modificar.js"></script>



</html>