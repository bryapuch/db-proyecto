<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap CSS -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel='stylesheet' href='/stylesheets/style.css' />

    <title>
        <%= title%>
    </title>
</head>

<body>

</body>

<%- include('partials/header') -%>

    <div class="container-fluid">
        <div class="row">
            <%- include('partials/nav') -%>
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 d-flex-column">
                    <div class="m-4 d-flex justify-content-center" >
                        <h1>Ingresar Articulo</h1>
                    </div>

                    <% if(created) {  %>

                    <div class="alert alert-success" role="alert" id="alert-new">
                        El articulo fue creado exitosamente!
                    </div>
                    
                    <% } %>

                    <form method="post" action="/api/articulos/"  class="container d-flex flex-column align-items-center fs-5">
                        <div class="input-group m-3 container d-flex align-items-center">
                            <label class="me-3 p-1">ID Articulo</label>
                            <input class="form-control" name="idArticulo" type="number" maxlength="10">
                        </div>
                        <div class="input-group m-3 container d-flex align-items-center">
                            <label class="me-5 p-2">Titulo</label>
                            <input class="form-control" name="titleArticulo">
                        </div>
                        <div class=" input-groupm-3 container d-flex">
                            <label class="me-2">Descripcion</label>
                            <textarea class="form-control" name="textArticulo"></textarea>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end container mt-3">
                            <button class="btn btn-primary  me-md-2" type="submit" > 
                                Registrar
                            </button>
                        </div>
                    </form>

                </main>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script>
        let alertNew = document.getElementById('alert-new');

        if(alertNew){
            
            setInterval( () => alertNew.style.display="none" ,3000 ); 
        }
    </script>

</html>